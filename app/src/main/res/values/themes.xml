    </style>
    <style name="email_address">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#F94A21</item>

    </style>
    <style name="enter_your_email">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#7E7E7E</item>
    </style>
    <style name="password_forget">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#2177F9</item>
    </style>
    <style name="loginbtn">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#F5F5F5</item>
    </style>
    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/calibri_regular</item>
        <!-- Sesuaikan properti lainnya jika diperlukan -->
    </style>
    <style name="facebook_login">
        <item name="android:textSize">15sp</item>
