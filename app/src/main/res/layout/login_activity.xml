<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    >

    <RelativeLayout
        android:id="@+id/signupbtn"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:background="#00FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/form_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231">

        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@+id/sign_up"
            app:srcCompat="@drawable/login_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:clickable="false"
            android:fontFamily="@font/pasifico"
            android:gravity="top"
            android:lineHeight="31sp"
            android:text="@string/sign_up"
            android:textAppearance="@style/sign_up"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="135dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/pasifico"
        android:gravity="center|center_horizontal|top"
        android:text="@string/login"
        android:textAppearance="@style/login"
        app:layout_constraintBottom_toTopOf="@+id/form_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679" />

    <RelativeLayout
        android:id="@+id/form_login"
        android:layout_width="wrap_content"
        android:layout_height="301dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292">


        <TextView
            android:id="@+id/password"
            android:layout_width="271.25dp"
            android:layout_height="24.39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="111dp"
            android:fontFamily="@font/calibri_regular"
            android:gravity="center_vertical"
            android:lineHeight="23sp"
            android:text="@string/password"
            android:textAppearance="@style/email_address" />

        <RelativeLayout
            android:layout_width="343dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="34dp"
            android:background="@drawable/bg_inputtext"
            android:elevation="10dp">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="5dp"
                android:autofillHints="Enter Email"
                android:background="@null"
                android:fontFamily="@font/calibri_regular"
                android:hint="@string/enter_your_email"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textColorHint="#474747"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="17dp"
                app:srcCompat="@drawable/email_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/email_address"
            android:layout_width="271.25dp"
            android:layout_height="24.39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/calibri_regular"
            android:gravity="center_vertical"
            android:lineHeight="23sp"
            android:text="@string/email_address"
            android:textAppearance="@style/email_address" />

        <RelativeLayout
            android:layout_width="343dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="33dp"
            android:background="@drawable/mail_pass_bg"
            android:elevation="4dp">

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="5dp"
                android:autofillHints="Enter Password"
                android:background="@null"
                android:fontFamily="@font/calibri_regular"
                android:hint="@string/enter_your_password"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textColorHint="#474747"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/eye_icon"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="17dp"
                android:clickable="true"
                app:srcCompat="@drawable/icon_eye" />
        </RelativeLayout>

        <TextView
            android:id="@+id/reset_password"
            android:layout_width="217dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="201dp"
            android:gravity="center_vertical"
            android:text="@string/password_forgot"
            android:textAppearance="@style/password_forget"
            android:textColor="#2177F9" />

        <Button
            android:id="@+id/LoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="242dp"
            android:layout_marginEnd="113dp"
            android:background="@drawable/btn_bg"
            android:backgroundTint="#F94A21"
            android:fontFamily="@font/calibri_bold"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:cornerRadius="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Ggl_btn"
        android:layout_width="173dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_1"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.663">

        <ImageView
            android:id="@+id/google_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/google_icon" />

        <TextView
            android:id="@+id/login_google"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_above="@id/google_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="-32dp"
            android:fontFamily="@font/calibri_bold"
            android:gravity="top"
            android:lineHeight="18sp"
            android:text="@string/google_login"
            android:textAppearance="@style/facebook_login"
            android:textColor="@color/black" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/calibri_regular"
        android:gravity="center"
        android:text="or"
        android:textColor="?android:textColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/Ggl_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_login" />

</androidx.constraintlayout.widget.ConstraintLayout>