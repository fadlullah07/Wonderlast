<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    >

    <RelativeLayout
        android:id="@+id/signupbtn"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="278dp"
        android:layout_marginTop="14dp"
        android:background="#00FFFFFF"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:layout_toStartOf="@+id/sign_up"
            app:srcCompat="@drawable/login_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"
            android:clickable="false"
            android:fontFamily="@font/pasifico"
            android:gravity="top"
            android:lineHeight="31sp"
            android:text="@string/sign_up"
            android:textAppearance="@style/sign_up"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        tools:ignore="ContentDescription"
        android:id="@+id/travel_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="175dp"
        app:srcCompat="@drawable/travel_icon" />

    <TextView
        android:id="@+id/login"
        android:layout_width="135dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="139dp"
        android:fontFamily="@font/pasifico"
        android:gravity="center|center_horizontal|top"
        android:text="@string/login"
        android:textAppearance="@style/login" />

    <RelativeLayout
        android:id="@+id/form_login"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="-1dp">


        <TextView
            android:id="@+id/password"
            android:layout_width="271.25dp"
            android:layout_height="24.39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="111dp"
            android:fontFamily="@font/calibri_regular"
            android:gravity="center_vertical"
            android:lineHeight="23sp"
            android:text="@string/password"
            android:textAppearance="@style/email_address" />

        <RelativeLayout
            android:layout_width="343dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="34dp"
            android:background="@drawable/mail_pass_bg"
            android:elevation="4dp">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:autofillHints="Enter Email"

                android:fontFamily="@font/calibri_regular"
                android:hint="@string/enter_your_email"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textColorHint="#474747"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="17dp"
                app:srcCompat="@drawable/email_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/email_address"
            android:layout_width="271.25dp"
            android:layout_height="24.39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/calibri_regular"
            android:gravity="center_vertical"
            android:lineHeight="23sp"
            android:text="@string/email_address"
            android:textAppearance="@style/email_address" />

        <RelativeLayout
            android:layout_width="343dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="33dp"
            android:background="@drawable/mail_pass_bg"
            android:elevation="4dp">

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:autofillHints="Enter Password"
                android:fontFamily="@font/calibri_regular"
                android:hint="@string/enter_your_password"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textColorHint="#474747"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/eye_icon"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="17dp"
                android:clickable="true"
                app:srcCompat="@drawable/icon_eye" />
        </RelativeLayout>

        <TextView
            android:id="@+id/reset_password"
            android:layout_width="217dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="201dp"
            android:gravity="center_vertical"
            android:text="@string/password_forgot"
            android:textAppearance="@style/password_forget"
            />

        <Button
            android:id="@+id/LoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="242dp"
            android:layout_marginEnd="113dp"
            android:background="@drawable/rectangle_1"
            android:backgroundTint="#F94A21"
            android:fontFamily="@font/calibri_bold"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/login"
            android:textAppearance="@style/loginbtn"
            android:textColorLink="#FF5722"
            android:textStyle="bold"
            app:cornerRadius="20dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/bg_map"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="44dp"
        app:srcCompat="@drawable/bg_vector" />

    <RelativeLayout
        android:id="@+id/fcbk_btn"
        android:layout_width="181dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="479dp"
        android:layout_marginEnd="107dp"
        android:background="@drawable/rectangle_1"
        android:clickable="true">

        <ImageView
            android:id="@+id/fcbk_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/facebook_icon" />

        <TextView
            android:id="@+id/login_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fcbk_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="-21dp"
            android:fontFamily="@font/calibri_bold"
            android:gravity="top"
            android:lineHeight="18sp"
            android:text="@string/facebook_login"
            android:textAppearance="@style/facebook_login" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Ggl_btn"
        android:layout_width="181dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/rectangle_1"
        android:clickable="true">

        <ImageView
            android:id="@+id/google_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/google_icon" />

        <TextView
            android:id="@+id/login_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/google_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="-21dp"
            android:fontFamily="@font/calibri_bold"
            android:gravity="top"
            android:lineHeight="18sp"
            android:text="@string/google_login"
            android:textAppearance="@style/facebook_login" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="255dp"
        android:layout_marginBottom="127dp"
        app:srcCompat="@drawable/mark" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="99dp"
        android:layout_marginBottom="51dp"
        app:srcCompat="@drawable/waterfalls" />

</RelativeLayout>