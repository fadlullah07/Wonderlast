<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signup_activity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignupActivity"
    >


    <RelativeLayout
        android:id="@+id/loginbtn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="748dp"
        android:background="#00FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:layout_toStartOf="@+id/login"
            app:srcCompat="@drawable/login_icon" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"
            android:clickable="false"
            android:fontFamily="@font/pasifico"
            android:gravity="top"
            android:lineHeight="31sp"
            android:text="@string/login"
            android:textAppearance="@style/sign_up"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/travel_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/travel_icon" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="656dp"
        android:fontFamily="@font/pasifico"
        android:gravity="center|center_horizontal|top"
        android:text="@string/sign_up"
        android:textAppearance="@style/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <RelativeLayout
        android:id="@+id/form_login"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332">


        <TextView
            android:id="@+id/password"
            android:layout_width="271.25dp"
            android:layout_height="24.39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="111dp"
            android:fontFamily="@font/calibri_regular"
            android:gravity="center_vertical"
            android:lineHeight="23sp"
            android:text="@string/password"
            android:textAppearance="@style/email_address" />

        <RelativeLayout
            android:layout_width="343dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="34dp"
            android:background="@drawable/mail_pass_bg"
            android:elevation="4dp">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:autofillHints="Enter Email"

                android:fontFamily="@font/calibri_regular"
                android:hint="@string/enter_your_email"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textColorHint="#474747"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="17dp"
                app:srcCompat="@drawable/email_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/email_address"
            android:layout_width="271.25dp"
            android:layout_height="24.39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/calibri_regular"
            android:gravity="center_vertical"
            android:lineHeight="23sp"
            android:text="@string/email_address"
            android:textAppearance="@style/email_address" />

        <RelativeLayout
            android:layout_width="343dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="33dp"
            android:background="@drawable/mail_pass_bg"
            android:elevation="4dp">

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:autofillHints="Enter Password"
                android:fontFamily="@font/calibri_regular"
                android:hint="@string/enter_your_password"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textColorHint="#474747"
                android:textSize="20sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="343dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="226dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/mail_pass_bg"
            android:elevation="4dp">

            <EditText
                android:id="@+id/input_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:autofillHints="Enter Password"
                android:fontFamily="@font/calibri_regular"
                android:hint="@string/re_enter_password"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textColorHint="#474747"
                android:textSize="20sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="301dp"
            android:layout_marginEnd="113dp"
            android:background="@drawable/rectangle_1"
            android:backgroundTint="#F94A21"
            android:fontFamily="@font/calibri_bold"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/sign_up"
            android:textAppearance="@style/loginbtn"
            android:textStyle="bold"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/password_confirm"
            android:layout_width="271.25dp"
            android:layout_height="24.39dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="79dp"
            android:layout_marginBottom="145dp"
            android:fontFamily="@font/calibri_regular"
            android:gravity="center_vertical"
            android:lineHeight="23sp"
            android:text="@string/confirm_password"
            android:textAppearance="@style/email_address" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/bg_map"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bg_vector" />

    <ImageView
        android:id="@+id/waterfall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/montain" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/mark" />

    <RelativeLayout
        android:id="@+id/fcbk_btn"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="188dp"
        android:background="@drawable/rectangle_1"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/fcbk_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/facebook_icon" />

        <TextView
            android:id="@+id/login_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fcbk_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="-21dp"
            android:fontFamily="@font/calibri_bold"
            android:gravity="top"
            android:lineHeight="18sp"
            android:text="@string/continue_with_facebook"
            android:textAppearance="@style/facebook_login" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/google_btn"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/rectangle_1"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/google_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/google_icon" />

        <TextView
            android:id="@+id/login_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/google_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="-21dp"
            android:fontFamily="@font/calibri_bold"
            android:gravity="top"
            android:lineHeight="18sp"
            android:text="@string/continue_with_google"
            android:textAppearance="@style/facebook_login" />
    </RelativeLayout>

    <TextView
        android:id="@+id/by_using_th"
        android:layout_width="273dp"
        android:layout_height="54dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/calibri_regular"
        android:gravity="center_horizontal|top"
        android:text="@string/agreement"
        android:textAppearance="@style/agreement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>